{
  "name": "@heathweaver/todoist-mcp-server-http",
  "version": "0.2.5",
  "description": "HTTP-based Todoist MCP Server with Docker deployment and GitHub OAuth authentication.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mcp-server-todoist": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "build:check": "tsc --noEmit",
    "lint": "echo 'No linter configured'",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "prebuild": "npm run build:check",
    "prepack": "npm run build:check && npm test",
    "docker:build": "npm run build:check && npm test && npm run build && docker build -t todoist-mcp-server-http .",
    "docker:build:fast": "npm run build && docker build -t todoist-mcp-server-http ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heathweaver/todoist-mcp-server-http.git"
  },
  "keywords": [
    "mcp",
    "todoist",
    "claude",
    "ai",
    "task-management",
    "project-management",
    "modelcontextprotocol",
    "label-management"
  ],
  "author": "Heath Weaver (inspired by @Chrusic/todoist-mcp-server-extended)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heathweaver/todoist-mcp-server-http/issues"
  },
  "homepage": "https://github.com/heathweaver/todoist-mcp-server-http#readme",
  "dependencies": {
    "@doist/todoist-api-typescript": "^3.0.3",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "shx": "^0.3.4",
    "typescript": "^5.7.2"
  },
  "directories": {
    "doc": "doc"
  }
}
